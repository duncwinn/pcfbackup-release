# abort script on any command that exits with a non zero value
set -e

cd ${BOSH_INSTALL_TARGET}

mkdir java
tar zxvf ${BOSH_COMPILE_TARGET}/openjdk-1.8.0_25/openjdk-1.8.0_25.tar.gz --directory java
if [[ $? != 0 ]] ; then
  echo "Cannot unpack JDK 1.8.0_25"
  exit 1
fi

mkdir cli
tar zxvf ${BOSH_COMPILE_TARGET}/s3-cli-0.1.0/s3-cli-0.1.0-package.tar.gz --directory cli
if [[ $? != 0 ]] ; then
  echo "Cannot unpack s3-cli-0.1.0"
  exit 1
fi